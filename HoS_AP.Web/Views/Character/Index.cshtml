@using HoS_AP.Web
@model ICollection<HoS_AP.BLL.Models.CharacterListItemModel>
@{
    ViewBag.Title = @Resources.Resource.CharactersList;
}

<h2>@Resources.Resource.CharactersList</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">

            <div class="form-group">
                <div class="col-md-offset-11 col-md-1">
                    <a href="@Url.Action("Add")" class="btn btn-info pull-right" role="button">@Resources.Resource.Add</a>
                </div>
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>
                        @Resources.Resource.CharacterName
                    </th>
                    <th>
                        @Resources.Resource.CharacterType
                    </th>
                    <th>
                        @Resources.Resource.CaracterCreated
                    </th>
                    <th>
                        @Resources.Resource.CharacterPrice
                    </th>
                    <th>
                        @Resources.Resource.CharacterActive
                    </th>
                    <th>
                        @Resources.Resource.CharacterDeleted
                    </th>
                    <th>

                    </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var character in Model)
                {
                    <tr>
                        <td class="col-md-2">
                            @character.Name
                        </td>
                        <td class="col-md-2">
                            @Html.GetEnumName(character.Type)
                        </td>
                        <td class="col-md-2">
                            @character.Created
                        </td>
                        <td class="col-md-2">
                            @String.Format("{0:0.00}", character.Price)
                        </td>
                        <td class="col-md-2">
                            @character.Active
                        </td>
                        <td class="col-md-2">
                            @character.Deleted
                        </td>
                        <th>
                            @Html.ActionLink(Resources.Resource.Edit, "Edit", "Character", new {name = character.Name}, null)
                        </th>
                    </tr>
                }
                </tbody>
            </table>

            <div class="form-group">
                <div class="col-md-offset-11 col-md-1">
                    <a href="@Url.Action("Add")" class="btn btn-info pull-right" role="button">@Resources.Resource.Add</a>
                </div>
            </div>
        </section>
    </div>
</div>