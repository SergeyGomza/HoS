@model HoS_AP.BLL.Models.CharacterEditModel

@{
    ViewBag.Title = "Add Character";
}

<h2>Add Character</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            <form method="POST" class="form-horizontal" role="form">
                @Html.Partial("_CharacterEditControls")
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-1">
                        <input type="submit" value="Add" class="btn btn-primary btn-large pull-right" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>