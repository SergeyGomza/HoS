@model HoS_AP.BLL.Models.CharacterEditModel

@{
    ViewBag.Title = "Add Character";
}

<h2>Add Character</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            <form method="POST" class="form-horizontal" role="form">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new {@class = "col-md-1 control-label"})
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Type, new { @class = "col-md-1 control-label" })
                    <div class="col-md-5">
                        @Html.DropDownListFor(m => m.Type, Model.Types.Select(x => new SelectListItem {Text = x.ToString()}), "Please select", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Type)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Price, new { @class = "col-md-1 control-label" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Price)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Active, new { @class = "col-md-1 control-label" })
                    <div class="col-md-5">
                        @Html.CheckBoxFor(m => m.Active)
                        @Html.ValidationMessageFor(m => m.Active)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-5 col-md-1">
                        <input type="submit" value="Save" class="btn btn-primary btn-large pull-right" />
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>